@model List<Company>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-grandient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-12 d-flex justify-content-end">
                <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-square"></i> Create New Company
                </a>
            </div>
        </div>

        <table class="table table-bordered table-stripped">
            <thead>
                <tr>
                    <th>
                        Company Name
                    </th>
                    <th>
                        Street Adress
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Postal Code
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Id))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>
                            @obj.StreetAdress
                        </td>
                        <td>
                            @obj.City
                        </td>
                        <td>
                            @obj.State
                        </td>
                        <td>
                            @obj.PostalCode
                        </td>
                        <td>
                            @obj.PhoneNumber
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Company" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
